{
  "manifest_version": 2,
  "name": "Custom Keyboard Shortcuts",
  "version": "0.0.1",
  "description": "Simple extension for customizing some browser keyboard shortcuts.",
  "update_url": "https://github.com/mntnoe/custom-keyboard-shortcuts",
  "icons": {
    "128": "icons/icon-128x128.png",
    "48":  "icons/icon-48x48.png",
    "16":  "icons/icon-16x16.png"
  },
   "commands": {
      "next_tab": {
         "description": "Go to the next tab"
      },
      "previous_tab": {
         "description": "Go to the previous tab"
      },
      "close_tab": {
         "description": "Close the current tab"
      },
      "reload_tab": {
        "description": "Reload the current tab"
      },
      "new_tab": {
        "description": "Open a new tab"
      }
   },
  "author": "Mads Navntoft Noe",
  "background": {
    "scripts": [ "src/commands.js" ]
  }
}
